<div class="col-sm-5">
  <h1><%= @country.c_name %></h1>

  <p><%= @country.c_description %></p>

  <% if @country.image %>
    <%= image_tag (@country.image), class:"country-image" %>
  <% elsif @country.country_image_file_name  %>
    <%= image_tag @country.attached_image_file_name(:medium) %>
  <% else %>
    <%= image_tag ('missing.png'), class:"country-image" %>
  <% end %>

  <% if @country.projects.any? %>
    <% @country.projects.each do |project| %>
      <h3><%= link_to project.p_name, country_project_path(@country, project), remote: true %></h3>
      <p><%= project.p_description %></p>
    <% end %>
  <% end %>

  <% if current_user && current_user.admin %>
    <p><%= link_to "Edit country page", edit_country_path %></p>
    <p><%= link_to "Add project", new_country_project_path(@country) %></p>
    <p><%= link_to "Delete country", country_path(@country),
            :data => {:confirm => "Are you sure you want to delete this project?",
            :method => "delete"} %></p>
  <% end %>
</div>
<div class="col-sm-2">
  <div id="show_project_sidebar">
  </div>
</div>
