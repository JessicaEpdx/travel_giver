<div id="show_project_sidebar">
  <h1><%= @project.name %></h1>
  <% if @project.image %>
    <%= image_tag(@project.image, class:'thumbnail') %>
  <% end %>

  <h3><%= @country.name %></h3>
    <p>  Total Needed: $<%= @project.total_needed %></p>
    <p> Total Donated: $<%= @project.total_donated %></p>
    <p> Number of Donations: <%= @project.donation_count %></p>
  <p><%= @project.description %></p>

  <% if current_user && current_user.admin %>
    <p><%= link_to "Edit project", edit_country_project_path(@country, @project) %></p>
    <p><%= link_to "Delete project", country_project_path(@country, @project),
            :data => {:confirm => "Are you sure you want to delete this project?",
            :method => "delete"} %></p>
  <% end %>

  <%= render partial: 'charges/form', project_id: @project.id %>
</div>
